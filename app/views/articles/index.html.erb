<h1>記事一覧</h1>

<%= link_to "新しい記事を書く", new_article_path %>

<% if @articles.any? %>
  <% @articles.each do |article| %>
    <article>
        <h2><%= link_to article.title, article_path(article) %></h2>
        <p><%= truncate(article.content, length: 100) %></p>
        <small>投稿日：<%= article.created_at.strftime("%Y年 %m月 %d日") %></small>
    </article>
    <hr>
  <% end %>
<% else %>
  <p>まだ記事はありません</p>
<% end %>
